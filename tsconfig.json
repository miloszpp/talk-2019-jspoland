{
  "compilerOptions": {
    "module": "system",
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
